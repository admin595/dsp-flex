
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id      String   @id @default("default")
  name    String
  columns Column[]
  tasks   Task[]
}

model Column {
  id      String   @id @default(uuid())
  key     String
  name    String
  order   Int
  board   Board    @relation(fields: [boardId], references: [id])
  boardId String
  tasks   Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  priority    String?
  status      String
  dueAt       DateTime?
  order       Int      @default(0)
  assignees   String[]
  labels      String[]
  board       Board    @relation(fields: [boardId], references: [id])
  boardId     String
  column      Column?  @relation(fields: [columnId], references: [id])
  columnId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
